<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@color/brand">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/topper">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_margin="10dp"
        android:src="@drawable/ic_drive_eta_black_24dp"
        android:id="@+id/image_car"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DETAILS"
        android:textStyle="bold"
        android:id="@+id/text_dearils"
        android:layout_margin="10dp"
        android:textColor="#FFF"
        android:layout_toRightOf="@id/image_car"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/topper"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_margin="10dp"
            android:src="@drawable/ic_event_seat_black_24dp"
            android:id="@+id/image_seat"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SEATS"
            android:id="@+id/text_dea"
            android:textColor="#FFF"

            android:textStyle="bold"
            android:layout_margin="10dp"
            android:layout_toRightOf="@id/image_seat"/>
    </RelativeLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="REquest"
        android:id="@+id/but"
        android:layout_centerVertical="true"/>

</RelativeLayout>